include _tmpl
include source/_project

mixin projectProject(item)
    .project__item.js-filter-item.active(data-category= item.category)
        a.project__item-thumb(href= item.link)
            img(src= item.img)
            .handler
                .desc!= item.desc
                .tags
                    for tag in item.tags
                        span= tag

mixin filter(item)
    li
        a.js-filter-category(href='javascript:void(0)', data-category= item.category)= item.label


+tmpl('project')
    .project__holder
        .title
            h2 Портфолио
        .project__filter
            ul.project__filter-list
                for item in filter
                    +filter(item)

    .project__list
        for item in projectJSON
            +projectProject(item)
    br(style="clear: both;")




